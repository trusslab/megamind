{
  "session_name": "4-pane-split",
  "windows": [
    {
      "window_name": "MegaMind development window",
      "shell_command_before": "sleep 1",
      "layout": "tiled",
      "panes": [
	{
	   "shell_command":[
		"sleep 5",
		"echo run the Device SDK here",
		"cd MegaMind_device_SDK1/build",
		"source run.sh"
	   ]
	},{
	   "shell_command":[
		"echo run the Megamind engine here",
		"cd MegaMind_engine",
		"python3.7 MegaMind_engine.py"
	   ]
	},{
	   "shell_command":[
		"sleep 3",
		"echo run MegaMind text API here",
		"cd MegaMind_engine",
		"python3.7 MegaMind_text_API.py"
	   ]
	}
      ],
      "options_after": {
        "mouse": true
      }
    }
  ]
}
